@model IEnumerable<MyClass.Models.Product>

@{
    ViewBag.Title = "Tât cả sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section header {

    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">THÙNG RÁC SẢN PHẨM</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","Product")" class="btn btn-sm btn-info "><i class="fas fa-long-arrow-alt-left"></i>  Về danh sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px"> # </th>
                            <th class="text-center" style="width:120px"> Hình </th>
                            <th> Tên sản phẩm </th>
                            @*<th> Danh mục sản phẩm </th>*@
                            <th>Ngày tạo</th>
                            <th class="text-center" style="width:180px">Chức năng</th>
                            <th class="text-center" style="width:20px"> ID </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkId" value="" /></td>
                                <td><img src="~/Public/images/product//@item.Img" alt="TenHinh" class="img-fluid" /></td>
                                <td>@item.Name</td>
                                @*<td>@item.CatName</td>*@
                                <td>@item.CreateAt</td>
                                <td class="text-center">
                                   

                                    <a href="@Url.Action("Retrash","Product", new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-undo-alt"></i></a>
                                    <a href="@Url.Action("Delete","Product", new { id = item.Id })" class="btn btn-sm btn-danger "><i class="fas fa-trash"></i></a>

                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
