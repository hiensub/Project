@model IEnumerable<MyClass.Models.PostInfo>
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="category-title position-relative">
                    <h2 class="text-center">Tất cả bài viết</h2>
                </div>
                @foreach (var post in Model)
                {
                <div class="row">
                    <div class="col-md-4">
                        <a href="~/@post.Slug"><img src="~/Public/images/post/@post.Img" class="img-fluid" /></a>
                    </div>
                    <div class="col=md-8">
                        <h3>@post.Title</h3>
                        <p>@post.Delail</p>
                    </div>
                    
                </div>
                }
                <!--end row-->
            </div>
            <!--end col-md-12 col-lg-12-->
        </div>
    </div>
</section>

